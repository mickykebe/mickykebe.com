---
import { navLinks } from "@/constants";

---
<header class="flex bg-gray-50 dark:bg-gray-900 px-4 sm:px-8">
  <nav class="mx-auto flex w-full max-w-4xl items-center justify-between border-gray-200 bg-gray-50 bg-opacity-60 py-8 text-gray-900 dark:border-gray-700 dark:bg-gray-900 dark:text-gray-100 sm:pb-16">
    <div class="nav-inner md:hidden">
      <button class="burger w-10 h-10 bg-transparent relative">
        <svg class="close-icon hidden h-5 w-5 absolute text-gray-900 dark:text-gray-100 -translate-x-1/2 -translate-y-1/2 scale-100 top-1/2 left-1/2 opacity-100 transition-[opacity .3s ease, transform .3s ease]" viewBox="0 0 24 24" width="24" height="24" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" fill="none" shape-rendering="geometricPrecision" data-hide="true">
          <path d="M18 6L6 18"></path>
          <path d="M6 6l12 12"></path>
        </svg>
        <svg class="burger-icon h-5 w-5 absolute text-gray-900 dark:text-gray-100 -translate-x-1/2 -translate-y-1/2 scale-100 top-1/2 left-1/2 opacity-100 transition-[opacity .3s ease, transform .3s ease]" viewBox="0 0 24 24" width="24" height="24" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" fill="none" shape-rendering="geometricPrecision" data-hide="true">
          <path d="M2.5 7.5H17.5" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"></path>
          <path d="M2.5 12.5H17.5" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"></path>
        </svg>
      </button>
      <ul class="mobile-menu hidden absolute flex-col bg-gray-50 text-2xl uppercase dark:bg-gray-900 pt-6 pr-7 pb-0 pl-1 w-full h-screen z-[1000]">
        {navLinks.map(navLink => (
          <li class="border-b border-gray-300 font-semibold text-gray-900 dark:border-gray-700 dark:text-gray-100 delay-150 [&:not(:first-child)]:mt-6">
            <a class="flex w-auto pb-4 text-teal-800">{navLink.text}</a>
          </li>))
        }
      </ul>
    </div>
  </nav>
</header>
